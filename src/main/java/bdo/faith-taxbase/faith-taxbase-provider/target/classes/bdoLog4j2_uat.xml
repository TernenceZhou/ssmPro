<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN"  monitorInterval="30">
	<properties>
		<!-- 日志备份目录 -->
		<property name="BACKUP_HOME">backup</property>
		<property name="SERVER_NAME">sacp-faith-taxbase</property>
		<property name="OUTPUT_LOG_LEVEL">INFO</property><!-- 日志输出级别 -->
		<property name="faith.host">${sys:web.server.host}</property>
	</properties>
	<appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout pattern="${faith.host} %d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] [${SERVER_NAME}] [REQUEST_ID_%X{requestId}] [%c{1.}] %line %m%n" charset="UTF-8" />
			<Filters>
				<ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="NEUTRAL" />
			</Filters>
		</Console>
		<Kafka name="Kafka" topic="sacp-log-uat" syncSend="false">
			<PatternLayout pattern="${faith.host} %d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] [${SERVER_NAME}] [REQUEST_ID_%X{requestId}] [%c{1.}] %line %m%n" charset="UTF-8" />
			<Property name="bootstrap.servers">172.16.3.92:9093,172.16.3.92:9094</Property>
			<ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY" />
		</Kafka>
		<Async name="async">
			<AppenderRef ref="Kafka"/>
		</Async>
	</appenders>

	<Loggers>
		<Logger name="org.apache" level="off"/>
		<Logger name="org.apache.kafka" level="off" />
		<!--<Logger name="org.springframework.data.redis" level="error"/>
		<Logger name="org.springframework.session" level="error"/>-->
		<Logger name="io.lettuce.core" level="error"/>
		<Logger name="org.quartz" level="error"/>
		<Logger name="org.springframework" level="error" />
		<Logger name="com.alibaba.nacos.client.naming" level="error"/>
		<Logger name="cn.com.bdo" level="${OUTPUT_LOG_LEVEL}" />
		<Logger name="druid.sql.Statement" level="${OUTPUT_LOG_LEVEL}"/>
		<Root level="${OUTPUT_LOG_LEVEL}">
			<AppenderRef ref="Kafka"/>
			<AppenderRef ref="CONSOLE"/>
		</Root>
	</Loggers>
</configuration>
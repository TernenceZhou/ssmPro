<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.com.bdo.auth.dao.KApifilterDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="cn.com.bdo.auth.entity.KApifilterEntity" id="kApifilterMap">
        <result property="autoId" column="autoId"/>
        <result property="apiId" column="apiId"/>
        <result property="filterId" column="filterId"/>
        <result property="creationDate" column="CREATION_DATE"/>
        <result property="createdBy" column="CREATED_BY"/>
        <result property="lastUpdateDate" column="LAST_UPDATE_DATE"/>
        <result property="lastUpdatedBy" column="LAST_UPDATED_BY"/>
        <result property="abolitionDate" column="ABOLITION_DATE"/>
        <result property="abolishedBy" column="ABOLISHED_BY"/>
        <result property="programApplicationId" column="PROGRAM_APPLICATION_ID"/>
        <result property="programId" column="PROGRAM_ID"/>
        <result property="activeFlag" column="ACTIVE_FLAG"/>
    </resultMap>

    <select id="selectApiFilterByApiId" resultType="cn.com.bdo.auth.vo.ApiFilterManageVo">
        SELECT
            ref.apiId,
            ref.filterId,
            ref.rules,
            f.beanName,
            f.className,
            f.methodName,
            f.filterLevel,
            f.sortNum,
            ref.ACTIVE_FLAG as activeFlag
        FROM
            asdb.k_apifilter ref
        LEFT JOIN asdb.k_filter f
           ON f.autoId = ref.filterId
        WHERE ref.ACTIVE_FLAG = '1'
        <if test="apiId != null">
            and ref.apiId = #{apiId} 
        </if>
    </select>

</mapper>
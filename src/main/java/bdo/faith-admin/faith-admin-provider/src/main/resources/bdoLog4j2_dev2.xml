<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN" monitorInterval="30">
	<properties>
		<property name="LOG_HOME">${sys:work.log.dir}</property>
		<!-- 日志备份目录 -->
		<property name="BACKUP_HOME">backup</property>
		<property name="SERVER_NAME">faith-admin</property>
		<property name="OUTPUT_LOG_LEVEL">INFO</property><!-- 日志输出级别 -->
		<property name="faith.host">${sys:web.server.host}</property>
	</properties>
	<appenders>
		<!-- ================================= -->
		<!-- 系统日志                           -->
		<!-- ================================= -->
		<RollingFile name="BDO_LOG"
					 fileName="${LOG_HOME}/BDO.log"
					 filePattern="${LOG_HOME}/dev_${BACKUP_HOME}/BDO.%d{yyyy-MM-dd-HH}.log">
			<PatternLayout
					pattern="${faith.host} %d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] [${SERVER_NAME}] [REQUEST_ID_%X{requestId}] [%c{1.}] %line %m%n"
					charset="UTF-8"/>
			<Policies>
				<CronTriggeringPolicy schedule="0 0 * * * ?"/>
				<SizeBasedTriggeringPolicy size="20MB"/>
			</Policies>
			<Filters>
				<ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
			</Filters>
			<DefaultRolloverStrategy>
				<!-- 删除指定目录下7天之前的日志-->
				<Delete basePath="${LOG_HOME}/dev_${BACKUP_HOME}" maxDepth="1">
					<IfFileName glob="BDO.*.log"/>
					<IfLastModified age="24H"/>
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>

		<RollingFile name="BDO_SQL_LOG"
					 fileName="${LOG_HOME}/BDO_SQL.log"
					 filePattern="${LOG_HOME}/dev_${BACKUP_HOME}/BDO_SQL.%d{yyyy-MM-dd-HH}.log">
			<PatternLayout
					pattern="${faith.host} %d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] [${SERVER_NAME}] [REQUEST_ID_%X{requestId}] [%c{1.}] %line %m%n"
					charset="UTF-8"/>
			<Policies>
				<CronTriggeringPolicy schedule="0 0 * * * ?"/>
				<SizeBasedTriggeringPolicy size="20MB"/>
			</Policies>
			<Filters>
				<!--<ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL" />-->
				<ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
			</Filters>
			<DefaultRolloverStrategy>
				<!-- 删除指定目录下7天之前的日志-->
				<Delete basePath="${LOG_HOME}/dev_${BACKUP_HOME}" maxDepth="1">
					<IfFileName glob="BDO_SQL.*.log"/>
					<IfLastModified age="24H"/>
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout
					pattern="${faith.host} %d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] [${SERVER_NAME}] [REQUEST_ID_%X{requestId}] [%c{1.}] %line %m%n"
					charset="UTF-8"/>
			<Filters>
				<ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
			</Filters>
		</Console>
		<Kafka name="Kafka" topic="sacp-log-dev" syncSend="false">
			<PatternLayout
					pattern="${faith.host} %d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] [${SERVER_NAME}] [REQUEST_ID_%X{requestId}] [%c{1.}] %line %m%n"
					charset="UTF-8"/>
			<Property name="bootstrap.servers">172.16.3.92:9093,172.16.3.92:9094</Property>
			<ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY"/>
		</Kafka>
		<Async name="async">
			<AppenderRef ref="BDO_LOG"/>
			<AppenderRef ref="BDO_SQL_LOG"/>
			<AppenderRef ref="Kafka"/>
		</Async>
	</appenders>

	<Loggers>
		<Logger name="cn.com.bdo.cusBase.service.CustomerUserService" level="OFF" includeLocation="true"/>
		<Logger name="org.apache" level="error"/>
		<Logger name="org.apache.commons.beanutils" level="off" includeLocation="true"/>
		<Logger name="org.apache.commons.digester3" level="off" includeLocation="true"/>
		<Logger name="org.apache.commons.digester" level="off" includeLocation="true"/>
		<Logger name="org.apache.axis" level="error" includeLocation="true"/>
		<Logger name="org.apache.kafka" level="off" includeLocation="true"/>
		<Logger name="org.logicalcobwebs" level="error" includeLocation="true"/>
		<Logger name="org.springframework.data.redis" level="error" includeLocation="true"/>
		<Logger name="org.springframework.session" level="error" includeLocation="true"/>
		<Logger name="io.lettuce.core" level="error" includeLocation="true"/>
		<Logger name="org.quartz" level="error" includeLocation="true"/>
		<Logger name="org.springframework" level="info" includeLocation="true"/>
		<Logger name="com.alibaba.nacos" level="error" includeLocation="true"/>

		<Logger name="cn.com.bdo" level="info" includeLocation="true"/>
		<Logger name="druid.sql.Statement" level="${OUTPUT_LOG_LEVEL}" includeLocation="true"/>
		<Root level="${OUTPUT_LOG_LEVEL}" includeLocation="true">
			<AppenderRef ref="Kafka"/>
			<AppenderRef ref="CONSOLE"/>
		</Root>

	</Loggers>
</configuration>